{
    "jira-plugin.workingProject": "",
    "emeraldwalk.runonsave": {
        "autoClearConsole": true,
        "message": "*** Starting Maven Build ***",
        "messageAfter": "*** Maven Build Complete ***",
        "showElapsed": true,
        "commands": [
            {
                "match": "\\.java$",
                "cmd": "cd ${workspaceFolder}/my-jee-app && mvn package",
                "message": "Building Java project with Maven...",
                "messageAfter": "Maven build finished",
                "showElapsed": true,
                "autoShowOutputPanel": "error"
            }
        ]
    }
}